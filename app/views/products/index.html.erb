<%= render 'shared/top_menu' %>
<table style="width: 1350px; margin-left: 10px;">
  <tr>
    <td><h3>Take influence from gumtree</h3></td>
  </tr>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.title %>
      </td>
      <td>
        <%= product.description.truncate(200) %>
      </td>
      <td>
        <%= (!product.price.blank? and product.price != 0.00) ? "$#{product.price}" : "Make me an offer" %>
      </td>
      <td><%= link_to 'Make offer', haggles_new_path %></td>
    </tr>
  <% end %>
</table>
